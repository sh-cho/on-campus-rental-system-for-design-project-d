doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='Kyung Hee University Reservation System Login Page')
        meta(name='author', content='Seonghyeon Cho, Hyeongmin Oh')
        title KHURS Sign in page

        link(rel='stylesheet', href='css/bootstrap.min.css')
        link(rel='stylesheet', href='css/sign.css')
    body
        header
        div.container
            form.form-signin(action='/signin', method='post')
                h2.form-signin-heading
                    a(href='/signin') KHURS Sign in
                h6 KHU Reservation System

                if query.success === 'true'
                    div.alert.alert-success.alert-dismissible.fade.show(role='alert')
                        button.close(type='button', data-dismiss='alert', aria-label='Close')
                            span(aria-hidden='true') &times;
                        | #{query.message}
                else if query.success === 'false'
                    div.alert.alert-warning.alert-dismissible.fade.show(role='alert')
                        button.close(type='button', data-dismiss='alert', aria-label='Close')
                            span(aria-hidden='true') &times;
                        | #{query.message}

                label.sr-only(for='inputEmail') Email
                input#inputEmail.form-control(name='email', type='email', placeholder='Email', required, autofocus)

                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(name='password', type='password', placeholder='Password', required)

                div.checkbox
                    label
                        input(type='checkbox', value='remember-me')
                        |  Remember me

                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
                hr
                p Don't have an account!&nbsp;
                    a(href='/signup') Sign Up Here
        footer
            script(src='js/jquery-3.2.1.min.js')
            script(src='js/tether.min.js')
            script(src='js/popper.min.js')
            script(src='js/bootstrap.min.js')

